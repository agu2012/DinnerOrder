<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp" >

    <TextView
        android:id="@+id/row_om_tv_img"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/row_om_tv_detail"
        android:layout_marginRight="18dp"
        android:background="@color/TEXT_RED"
        android:gravity="center"
        android:text="未结账"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/row_om_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/row_om_tv_img"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="订单号："
            android:textSize="24sp" />

        <TextView
            android:id="@+id/row_om_tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="20150403130633S01"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_om_ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_om_ll1"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/row_om_tv_img"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点单时间："
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/row_om_tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2015-04-03 "
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/row_om_tv_detail_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_om_ll2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/row_om_tv_img"
        android:gravity="center"
        android:text="消费内容："
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/row_om_tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_om_tv_detail_label"
        android:layout_toRightOf="@+id/row_om_tv_img"
        android:text="****"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/row_om_tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/row_om_tv_detail_label"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="￥100.00"
        android:textColor="@color/TEXT_RED"
        android:textSize="28sp" />

</RelativeLayout>